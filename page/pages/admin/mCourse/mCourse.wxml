<!--pages/admin/mCourse/mCourse.wxml-->
<!-- 搜索框 -->
<view class="searchBar">
  <input placeholder="请输入课程编号" value="{{searchValue}}" bindinput="searchValueInput" />
  <button bindtap="clickSearch">
    搜索
  </button>
</view>
<!-- 课程列表 -->
<block wx:for="{{courseList}}">
	<view class="myCell" bindtap='clickCell' data-index='{{item.id}}'>
		<view class="oneCell">
			<view class="cellText"> 课程编号：{{item.id}} </view>
      <view class="cellText"> 课程名称：{{item.cname}} </view>
      <view class="cellText"> 教室：{{item.classroom}} </view>
      <view class="cellText"> 教师：{{item.teacher}} </view>
		</view>
	</view>
</block>
<!-- 课程详情 -->
<dialog id="dialog" title="课程详情" confirmText="删除课程" cancelText="取消" content="{{dialogContent}}" bind:cancel="handleCancelDialog" bind:confirm="handleConfirmDialog">
</dialog>
