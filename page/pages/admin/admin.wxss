/* pages/admin/admin.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  background: #fafafa;
}

.tab-wrapper {
  position: fixed;
  z-index: 998;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background: #fff;
}

.tab-first, .tab-second, .tab-fifth, .tab-seventh {
  z-index: 999;
  flex: 1;
  font-size: 32rpx;
  color: #000;
  line-height: 100rpx;
  text-align: center;
}

.tab-active {
  border-bottom: 2px solid #09bb07;
}

.content-wrapper {
  margin-top: 100rpx;
  width: 100%;
  flex: 1;
}

.addIcon {
  z-index: 9999;
  position: fixed;
  width: 84rpx;
  height: 84rpx;
  right: 30rpx;
  bottom: 10%;
}
