<!--pages/admin/addCourse/addCourse.wxml-->
<view class='container'>
<view class='info'>
    <label class='info-text'>课程编号：</label>
    <view class='info-box'>
      <input class='info-input' placeholder='请输入课程编号' bindinput='input_num'></input>
    </view>
  </view>
  <view class='info'>
    <label class='info-text'>课程名称：</label>
    <view class='info-box'>
      <input class='info-input' placeholder='请输入课程名称' bindinput='input_name'></input>
    </view>
  </view>
  <view class='info'>
    <label class='info-text'>教室：</label>
    <view class='info-box'>
      <input class='info-input' placeholder='请输入教室' bindinput='input_classroom'></input>
    </view>
  </view>
  <view class='info'>
    <label class='info-text'>教师：</label>
    <view class='info-box'>
      <input class='info-input' placeholder='请输入教师名称' bindinput='input_teacher'></input>
    </view>
  </view>
  <view class='info'>
    <label class='info-text'>学分：</label>
    <view class='info-box'>
      <input class='info-input' placeholder='请输入该课程学分数' bindinput='input_credit'></input>
    </view>
  </view>
  <view class='info'>
    <label class='info-text picker-text'>星期：</label>
    <picker bindchange='bindPickerChangeWeek' range='{{weekList}}'>
      <view class='picker'>
        {{weekList[index1]}}
      </view>
    </picker>
  </view>
  <view class='info'>
    <label class='info-text picker-text'>上课时间：</label>
    <picker bindchange='bindPickerChangeStart' range='{{startList}}'>
      <view class='picker'>
        {{startList[index2]}}
      </view>
    </picker>
  </view>
  <view class='info'>
    <label class='info-text picker-text'>课时数：</label>
    <picker bindchange='bindPickerChangeTime' range='{{timeList}}'>
      <view class='picker'>
        {{timeList[index3]}}
      </view>
    </picker>
  </view>
  <button class='submit' bindtap='submit'>提交</button>
</view>