/* pages/student/student.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  background: #fafafa;
}

.tab-wrapper {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background: #fff;
}

.tab-first, .tab-second, .tab-third {
  flex: 1;
  font-size: 32rpx;
  color: #000;
  line-height: 100rpx;
  text-align: center;
}

.tab-active {
  border-bottom: 2px solid #09bb07;
}

.content-wrapper {
  width: 100%;
  flex: 1;
}
