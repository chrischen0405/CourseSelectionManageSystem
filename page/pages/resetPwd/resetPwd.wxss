  min-height: 100%;
  padding-top: 30rpx;
}

.info {
  width: 100%;
}

.info-text {
  height: 33rpx;
  width: 100%;
  padding-top: 14rpx;
  padding-bottom: 11rpx;
  color: #7f7f7f;
  font-size: 24rpx;
  padding-left: 30rpx;
